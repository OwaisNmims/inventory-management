<%- include ('../partials/head') %>

<!--  BEGIN NAVBAR  -->
<%- include ('../partials/header') %>
<!--  END NAVBAR  -->

<!--  BEGIN MAIN CONTAINER  -->
<div class="main-container" id="container">
  <div class="overlay"></div>
  <div class="search-overlay"></div>

  <!--  BEGIN SIDEBAR  -->
  <%- include ('../partials/sidebar') %>
  <!--  END SIDEBAR  -->

  <!--  BEGIN CONTENT AREA  -->
  <div id="content" class="main-content">
    <div class="layout-px-spacing">
      <div class="middle-content container-xxl p-0">
        <!--  BEGIN BREADCRUMBS  -->
        <div class="secondary-nav">
          <div class="breadcrumbs-container" data-page-heading="Analytics">
            <header class="header navbar navbar-expand-sm">
              <a href="javascript:void(0);" class="btn-toggle sidebarCollapse" data-placement="bottom">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-menu">
                  <line x1="3" y1="12" x2="21" y2="12"></line>
                  <line x1="3" y1="6" x2="21" y2="6"></line>
                  <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
              </a>
              <div class="d-flex breadcrumb-content">
                <div class="page-header">
                  <div class="page-title"></div>

                  <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                      <li class="breadcrumb-item active">
                        <a href="./masters">Master</a>
                      </li>
                      <li class="breadcrumb-item active" aria-current="page">
                        Inventory
                      </li>
                    </ol>
                  </nav>
                </div>
              </div>
            </header>
          </div>
        </div>
        <!--  END BREADCRUMBS  -->

        <div class="main-content">
          <!-- Summary Cards -->
          <div class="row mb-4">
            <% if (summary && summary.length > 0) { %>
              <% summary.forEach(function(item) { %>
                <div class="col-md-3">
                  <div class="card">
                    <div class="card-body text-center">
                      <h5 class="card-title"><%= item.status %></h5>
                      <h3 class="text-primary"><%= item.count %></h3>
                      <p class="text-muted"><%= item.unique_products %> unique products</p>
                    </div>
                  </div>
                </div>
              <% }); %>
            <% } %>
          </div>

          <div class="table-template">
            <div class="table-header">
              <div class="table-title">
                <h3>Inventory Units</h3>
              </div>
              <div class="table-actions">
                <button style="background: none; border: none" class="refresh-inventory">
                  <i class="fa-solid fa-refresh"></i>
                </button>
              </div>
            </div>

            <div class="table-content">
              <!-- Inventory Summary Cards -->
              <div class="row mb-4">
                <div class="col-md-3">
                  <div class="card bg-primary text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Total Units</h6>
                          <h4 class="mb-0" id="total-units"><%= inventoryUnits.length %></h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-boxes fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card bg-success text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Available</h6>
                          <h4 class="mb-0" id="available-units">
                            <%= inventoryUnits.filter(unit => unit.status === 'AVAILABLE').length %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card bg-warning text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Mapped</h6>
                          <h4 class="mb-0" id="mapped-units">
                            <%= inventoryUnits.filter(unit => unit.status === 'MAPPED').length %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-link fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="card bg-danger text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Sold</h6>
                          <h4 class="mb-0" id="sold-units">
                            <%= inventoryUnits.filter(unit => unit.status === 'SOLD').length %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-indian-rupee-sign fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Financial Summary Row -->
              <div class="row mb-4">
                <div class="col-md-4">
                  <div class="card bg-info text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Total Value</h6>
                          <h4 class="mb-0">
                            ₹<%= inventoryUnits.reduce((sum, unit) => sum + parseFloat(unit.price || 0), 0).toFixed(2) %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-chart-line fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card bg-primary text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Available Value</h6>
                          <h4 class="mb-0">
                            ₹<%= inventoryUnits.filter(unit => unit.status === 'AVAILABLE').reduce((sum, unit) => sum + parseFloat(unit.price || 0), 0).toFixed(2) %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-coins fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="card bg-dark text-white">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div>
                          <h6 class="card-title">Sold Value</h6>
                          <h4 class="mb-0">
                            ₹<%= inventoryUnits.filter(unit => unit.status === 'SOLD').reduce((sum, unit) => sum + parseFloat(unit.price || 0), 0).toFixed(2) %>
                          </h4>
                        </div>
                        <div class="align-self-center">
                          <i class="fas fa-hand-holding-usd fa-2x"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="table-filter-container">
                <div class="row mb-3">
                  <div class="col-md-3">
                    <select class="form-select" id="status-filter">
                      <option value="">All Status</option>
                      <option value="AVAILABLE">Available</option>
                      <option value="MAPPED">Mapped</option>
                      <option value="SOLD">Sold</option>
                      <option value="RESERVED">Reserved</option>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <select class="form-select" id="product-filter">
                      <option value="">All Products</option>
                      <% if (products && products.length > 0) { %>
                        <% products.forEach(function(product) { %>
                          <option value="<%= product.name %>"><%= product.name %> (<%= product.product_code %>)</option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <select class="form-select" id="company-filter">
                      <option value="">All Companies</option>
                      <% if (companies && companies.length > 0) { %>
                        <% companies.forEach(function(company) { %>
                          <option value="<%= company.name %>"><%= company.name %> (<%= company.company_type %>)</option>
                        <% }); %>
                      <% } %>
                    </select>
                  </div>
                  <div class="col-md-3">
                    <button class="btn btn-secondary" id="clear-filters">Clear Filters</button>
                  </div>
                </div>
              </div>
              
              <div class="table-content">
                <div class="table-responsive">
                  <table class="table table-bordered" id="inventory-table">
                    <thead>
                      <tr>
                        <th scope="col">Inventory ID</th>
                        <th scope="col">Product</th>
                        <th scope="col">Product Code</th>
                        <th scope="col">Category</th>
                        <th scope="col">Price</th>
                        <th scope="col">Status</th>
                        <th scope="col">Current Company</th>
                        <th scope="col">Mapped Company</th>
                        <th scope="col">Mapping Label</th>
                        <th scope="col">Mapped Date</th>
                        <th scope="col">Notes</th>
                        <th class="text-center" scope="col">Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% if (inventoryUnits && inventoryUnits.length > 0) { %>
                        <% inventoryUnits.forEach(function(unit) { %>
                          <tr data-inventory-id="<%= unit.inventory_id %>" data-status="<%= unit.status %>" data-product="<%= unit.product_name %>" data-company="<%= unit.mapped_company_name || '' %>">
                            <td><%= unit.inventory_id %></td>
                            <td class="product-name"><%= unit.product_name %></td>
                            <td><%= unit.product_code %></td>
                            <td><%= unit.category || '-' %></td>
                            <td><%= unit.price ? '₹' + parseFloat(unit.price).toFixed(2) : '-' %></td>
                            <td>
                              <span class="badge 
                                <% if (unit.status === 'AVAILABLE') { %>badge-success<% } 
                                   else if (unit.status === 'MAPPED') { %>badge-warning<% } 
                                   else if (unit.status === 'SOLD') { %>badge-danger<% } 
                                   else { %>badge-secondary<% } %>">
                                <%= unit.status %>
                              </span>
                            </td>
                            <td><%= unit.current_company_name || '-' %></td>
                            <td><%= unit.mapped_company_name || '-' %></td>
                            <td>
                              <% if (unit.mapping_label) { %>
                                <span class="badge 
                                  <% if (unit.mapping_label === 'NEW') { %>badge-success<% } 
                                     else if (unit.mapping_label === 'OLD') { %>badge-secondary<% } 
                                     else { %>badge-info<% } %>">
                                  <%= unit.mapping_label %>
                                </span>
                              <% } else { %>
                                -
                              <% } %>
                            </td>
                            <td><%= unit.mapped_at ? new Date(unit.mapped_at).toLocaleDateString() : '-' %></td>
                            <td><%= unit.mapping_notes || '-' %></td>
                            <td class="text-center">
                              <div class="action-btns">
                                <% if (unit.status === 'AVAILABLE') { %>
                                  <button class="btn btn-sm btn-outline-primary btn-map" data-id="<%= unit.inventory_id %>" title="Map to Company">
                                    <i class="fas fa-link"></i>
                                  </button>
                                  <button class="btn btn-sm btn-outline-danger btn-delete" 
                                          data-id="<%= unit.inventory_id %>" 
                                          data-product="<%= unit.product_name %>"
                                          title="Delete this inventory unit">
                                    <i class="fas fa-trash"></i>
                                  </button>
                                <% } %>
                                <% if (unit.status === 'MAPPED') { %>
                                  <button class="btn btn-sm btn-outline-danger btn-sell" data-id="<%= unit.inventory_id %>" title="Mark as Sold">
                                    <i class="fas fa-indian-rupee-sign"></i>
                                  </button>
                                <% } %>
                                <button class="btn btn-sm btn-outline-info btn-details" data-id="<%= unit.inventory_id %>" title="View Details">
                                  <i class="fas fa-eye"></i>
                                </button>
                              </div>
                            </td>
                          </tr>
                        <% }); %>
                      <% } else { %>
                        <tr>
                          <td colspan="12" class="text-center">No inventory units found</td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--  END CONTENT AREA  -->
</div>
<!-- END MAIN CONTAINER -->

<!-- Inventory Details Modal -->
<div class="modal fade" id="inventory-details-modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="inventory-details-modal" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content modal-inputform">
      <div class="modal-header modal-inputform-header">
        <h5 class="modal-title text-dark" id="">INVENTORY UNIT DETAILS</h5>
        <button type="button" class="btn fs-4 text-dark" data-bs-dismiss="modal" aria-label="Close">
          <i class="fas fa-times"></i>
        </button>
      </div>
      <div class="modal-body">
        <div id="inventory-details-content">
          <!-- Content will be loaded here -->
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<%- include ('../partials/footer') %>

<!-- CUSTOM JS SCRIPT -->
<script>
$(document).ready(function() {
  
  // Simple table filtering function
  function filterTable() {
    var statusFilter = $('#status-filter').val().toLowerCase();
    var productFilter = $('#product-filter').val().toLowerCase();
    var companyFilter = $('#company-filter').val().toLowerCase();
    
    var visibleCounts = {
      total: 0,
      available: 0,
      mapped: 0,
      sold: 0,
      reserved: 0
    };
    
    $('#inventory-table tbody tr').each(function() {
      var row = $(this);
      var status = row.find('td:eq(5)').text().toLowerCase();
      var product = row.find('td:eq(1)').text().toLowerCase();
      var company = row.find('td:eq(7)').text().toLowerCase();
      
      var showRow = true;
      
      // Check status filter
      if (statusFilter && status.indexOf(statusFilter) === -1) {
        showRow = false;
      }
      
      // Check product filter
      if (productFilter && product.indexOf(productFilter) === -1) {
        showRow = false;
      }
      
      // Check company filter
      if (companyFilter && company.indexOf(companyFilter) === -1) {
        showRow = false;
      }
      
      if (showRow) {
        row.show();
        visibleCounts.total++;
        
        // Count by status
        if (status.indexOf('available') !== -1) {
          visibleCounts.available++;
        } else if (status.indexOf('mapped') !== -1) {
          visibleCounts.mapped++;
        } else if (status.indexOf('sold') !== -1) {
          visibleCounts.sold++;
        } else if (status.indexOf('reserved') !== -1) {
          visibleCounts.reserved++;
        }
      } else {
        row.hide();
      }
    });
    
    // Update summary cards
    updateSummaryCards(visibleCounts);
  }
  
  // Update summary cards with filtered counts
  function updateSummaryCards(counts) {
    $('#total-units').text(counts.total);
    $('#available-units').text(counts.available);
    $('#mapped-units').text(counts.mapped);
    $('#sold-units').text(counts.sold);
  }

  // Status filter
  $('#status-filter').on('change', function() {
    filterTable();
  });

  // Product filter
  $('#product-filter').on('change', function() {
    filterTable();
  });

  // Company filter
  $('#company-filter').on('change', function() {
    filterTable();
  });

  // Clear filters
  $('#clear-filters').on('click', function() {
    $('#status-filter').val('');
    $('#product-filter').val('');
    $('#company-filter').val('');
    $('#inventory-table tbody tr').show();
    
    // Reset summary cards to original values
    $('#total-units').text('<%= inventoryUnits.length %>');
    $('#available-units').text('<%= inventoryUnits.filter(unit => unit.status_name === "AVAILABLE").length %>');
    $('#mapped-units').text('<%= inventoryUnits.filter(unit => unit.status_name === "MAPPED").length %>');
    $('#sold-units').text('<%= inventoryUnits.filter(unit => unit.status_name === "SOLD").length %>');
  });

  // Refresh inventory
  $('.refresh-inventory').on('click', function() {
    location.reload();
  });

  // View inventory details
  $(document).on('click', '.btn-details', function() {
    var inventoryId = $(this).data('id');
    var row = $(this).closest('tr');
    
    var details = `
      <div class="row">
        <div class="col-md-6">
          <h6>Product Information</h6>
          <p><strong>Product:</strong> ${row.find('td:eq(1)').text()}</p>
          <p><strong>Product Code:</strong> ${row.find('td:eq(2)').text()}</p>
          <p><strong>Category:</strong> ${row.find('td:eq(3)').text()}</p>
          <p><strong>Price:</strong> ${row.find('td:eq(4)').text()}</p>
        </div>
        <div class="col-md-6">
          <h6>Inventory Information</h6>
          <p><strong>Inventory ID:</strong> ${inventoryId}</p>
          <p><strong>Status:</strong> ${row.find('td:eq(5)').text()}</p>
          <p><strong>Current Company:</strong> ${row.find('td:eq(6)').text()}</p>
          <p><strong>Mapped Company:</strong> ${row.find('td:eq(7)').text()}</p>
          <p><strong>Mapping Label:</strong> ${row.find('td:eq(8)').text()}</p>
          <p><strong>Mapped Date:</strong> ${row.find('td:eq(9)').text()}</p>
          <p><strong>Notes:</strong> ${row.find('td:eq(10)').text()}</p>
        </div>
      </div>
    `;
    
    $('#inventory-details-content').html(details);
    $('#inventory-details-modal').modal('show');
  });

  // Map inventory to company (placeholder)
  $(document).on('click', '.btn-map', function() {
    var inventoryId = $(this).data('id');
    createAlert({
      title: 'INFO',
      msg: 'Mapping functionality will be implemented in the company mapping module.',
      type: 'info'
    });
  });

  // Mark as sold (placeholder)
  $(document).on('click', '.btn-sell', function() {
    var inventoryId = $(this).data('id');
    
    if (confirm('Are you sure you want to mark this inventory unit as sold?')) {
      $.ajax({
        method: "POST",
        url: "/admin/inventory/update-status",
        headers: { 'Content-Type': 'application/json' },
        data: JSON.stringify({ 
          inventoryId: inventoryId, 
          status: 'SOLD' 
        }),
        success: function(response) {
          if (response.status === 200) {
            createAlert({
              title: "SUCCESS",
              msg: "Inventory unit marked as sold!",
              type: "positive",
            });
            setTimeout(() => {
              location.reload();
            }, 2000);
          } else {
            createAlert({
              title: "ERROR",
              msg: response.data.message || "Something went wrong!",
              type: "negative",
            });
          }
        },
        error: function() {
          createAlert({
            title: "ERROR",
            msg: "Something went wrong!",
            type: "negative",
          });
        }
      });
    }
  });

  // Delete inventory unit
  $(document).on('click', '.btn-delete', function() {
    var inventoryId = $(this).data('id');
    var productName = $(this).data('product');
    
    if (confirm(`Are you sure you want to delete inventory unit #${inventoryId} for "${productName}"? This action cannot be undone.`)) {
      $.ajax({
        method: "DELETE",
        url: "/admin/inventory/delete/" + inventoryId,
        success: function(response) {
          if (response.status === 200) {
            createAlert({
              title: "SUCCESS",
              msg: "Inventory unit deleted successfully!",
              type: "positive",
              reload: true
            });
          } else {
            createAlert({
              title: "ERROR",
              msg: response.data.message || "Something went wrong!",
              type: "negative"
            });
          }
        },
        error: function() {
          createAlert({
            title: "ERROR",
            msg: "Something went wrong!",
            type: "negative"
          });
        }
      });
    }
  });
});
</script><!--END CUSTOM JS SCRIPT -->

<%- include ('../partials/footer-end') %>
