<!-- CUSTOM JS SCRIPT -->
<script>
  $(document).ready(function() {
    
    // GLOBAL VARIABLES
    let transportModeLid;
    let newTransportModes = [];

     //Insert MODE-OF-TRANSPORT
     $('#add-transport-modal .add-transport').on('click', function () {
         
          const transportMode = $('#mode-of-transport').val().trim().toUpperCase();

          if (!isAlphabet(transportMode)) {
            createAlert({
              title: "Incorrect input!",
              msg: "Incorrect input, please check and try again.",
              type: "negative",
            });

            return false;
          }

          // Check for duplicate before pushing
          const isDuplicate = newTransportModes.some(rowData => (
            rowData.transportMode === transportMode
          ));

          if (isDuplicate) {
            createAlert({
              title: "Duplicate Data!",
              msg: "Duplicate entries detected.",
              type: "negative",
            });
            return false;
          }

          newTransportModes.push({transportMode});

          const newTr = $('<tr>');
          let rowCount = $('#add-more-transport-table tbody tr').length + 1;

          
          newTr.data('transport-mode', transportMode);

          newTr.append($('<td>').text(rowCount));
          newTr.append($('<td>').text(transportMode));
          newTr.append($('<td>').html(`<i class="fa-regular fa-trash-can delete-row-btn cursor-pointer"></i>`));

          $('#add-more-transport-table tbody').append(newTr);
        })

      // Delete row button click handler
      $(document).on('click', '.delete-row-btn', function () {
          const tr = $(this).closest('tr');
          const transportMode = tr.data('transport-mode');

          // Remove row data from the array
          newTransportModes.splice(newTransportModes.findIndex(mode => (
            mode.modeName === transportMode
          )), 1);

          tr.remove();
          updateSerialNumbers('#add-more-transport-table tbody tr');
        });

      //INSERT API CALL
      $(document).on('click', '.create-mode', function(){  
          $.ajax({
            method: "POST",
            url: "/admin/mode-of-transport/add",
            data: {
              transportModeData: newTransportModes
            },
            success: function (response) {
              
              if (response.status == 200) {
                alert(`${response.data.message}`);
                location.reload(true);
              } else {
                createAlert({
                  title: "ERROR",
                  msg: response.data.message,
                  type: "negative",
                });
                $("#add-transport-modal").modal("hide");
              }
              $("#add-transport-modal").modal("hide");
            },
            error: function (error) {
              
              createAlert({
                title: "ERROR",
                msg: "not done",
                type: "negative",
              });

              $("#add-transport-modal").modal("hide");
            },
          });

          $('#add-transport-modal').modal('hide');
      })
    
      // EDIT MODE-OF-TRANSPORT 
      $(document).on('click', '.btn-edit', function () {
          transportModeLid = $(this).attr('data-mode-id');
          const thisTr = this.closest('tr');
          const modeName = $(thisTr).find('.mode-name').text();

          $('#edit-transport-input').val(modeName);
          $('#edit-transport-modal').modal('show');
        })

      // Save Edited MODE-OF-TRANSPORT
      $(document).on('click', '#save-edited-data', function () {
          let newModeName = $('#edit-transport-input').val().trim().toUpperCase();

          $.ajax({
            method: "POST",
            url: "/admin/mode-of-transport/update",
            data: {
              modeData: { transportModeLid, newModeName }
            },
            success: function (response) {
              if (response.status == 200) {
                alert(`${response.data.message}`);
                location.reload(true);
              } else {
                createAlert({
                  title: "ERROR",
                  msg: response.data.message,
                  type: "negative",
                });
                $("#edit-transport-modal").modal("hide");
              }
              $("#edit-transport-modal").modal("hide");
            },
            error: function (error) {
              createAlert({
                title: "ERROR",
                msg: "not done",
                type: "negative",
              });
              $("#edit-transport-modal").modal("hide");
            },
          });

          $('#edit-transport-modal').modal('hide');
        })
      
       // DELETE MDDE-OF-TRANSPORT
       $(document).on('click', '.btn-delete', function () {
          transportModeLid = $(this).attr('data-mode-id');

          const isConfirmed = confirm('Are you sure you want to remove the Mode of transport?');

          if (!isConfirmed) {
              return false;
          }

          $.ajax({
            method: "POST",
            url: "/admin/mode-of-transport/delete",
            data: {
              modeData: { transportModeLid }
            },
            success: function (response) {
              if (response.status == 200) {
                alert("SUCCESS - Successfully Deleted!");
                location.reload(true);
              } else {
                createAlert({
                  title: "ERROR",
                  msg: response.message,
                  type: "negative",
                });
              }
            },
            error: function (error) {
              createAlert({
                title: "ERROR",
                msg: error.message,
                type: "negative",
              });
            },
          });
        })

  })
</script>
